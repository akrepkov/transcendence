
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
	userId      		Int      	@id @default(autoincrement())
	username    		String   	@unique
	email       		String   	@unique
	avatar   			String?
	games       		Game[]
	wins        		Int      	@default(0)
	losses      		Int      	@default(0)
	rank        		Int      	@default(0)
	createdAt   		DateTime 	@default(now())
	password			String	 
	friends				User[]
}


model Game {
	gameId				Int			@id @default(autoincrement())
	player1Id			Int
	player2Id			Int
	winnerId			Int
	player1Score		Int
	player2Score		Int
	createdAt			DateTime	@default(now())

}

model Leaderboard {
  userId    			Int   		@id		
  wins					Int
}
